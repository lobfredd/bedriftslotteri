<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
      <%- if controller_name != 'sessions' %>
          <%= link_to "Logg inn", new_session_path(resource_name) %><br/>
      <% end -%>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Registrer bruker", new_registration_path(resource_name) %><br/>
      <% end -%>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Registrer firma", newcompany_path %><br/>
      <% end -%>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Glemt passord?", new_password_path(resource_name) %><br/>
      <% end -%>

      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
          <%= link_to "Ikke mottatt instruksjoner for bekreftelse av konto?", new_confirmation_path(resource_name) %>
          <br/>
      <% end -%>

      <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
          <%= link_to "IKke mottatt instruksjoner for gjenÃ¥pning av konto??", new_unlock_path(resource_name) %><br/>
      <% end -%>

      <%- if devise_mapping.omniauthable? %>

          <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to "Logg inn med #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %>
              <br/>
          <% end -%>
      <% end -%>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>